<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Subjects for the Day"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        android:textColor="#333333" />

    <!-- Subject Group for Math -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/holo_blue_bright"
        android:paddingVertical="16dp"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/checkbox_math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Math"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_button_math"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Color"
                android:textColor="@android:color/black"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_time_math"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>

    <!-- Subject Group for History -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/holo_green_light"
        android:paddingVertical="16dp"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/checkbox_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_button_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Color"
                android:textColor="@android:color/black"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_time_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>

    <!-- Subject Group for Physics -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/holo_red_light"
        android:paddingVertical="16dp"
        android:layout_marginBottom="8dp">

        <CheckBox
            android:id="@+id/checkbox_physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physics"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/color_button_physics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Choose Color"
                android:textColor="@android:color/black"
                android:background="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/tv_time_physics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Time"
                android:textSize="18sp"
                android:paddingStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner_repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:minHeight="48dp"
        android:background="?attr/selectableItemBackground"
        android:elevation="4dp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="18sp"
        android:paddingTop="10dp" />
    <EditText
        android:id="@+id/subject_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter subject description"
        android:inputType="textMultiLine" />

</LinearLayout>
